  <!-- Generator Script -->
  <script>
    function generateAvatar() {
      const prompt = document.getElementById("avatarPrompt").value;
      const result = document.getElementById("avatarResult");
      result.innerHTML = `<p>Generating avatar for: <strong>${prompt}</strong></p>`;
      result.innerHTML += `<img src="https://api.dummyimage.com/300x300/000/fff&text=${encodeURIComponent(prompt)}" class="mt-2 rounded" />`;
    }

    function generateImage() {
      const prompt = document.getElementById("imagePrompt").value;
      const result = document.getElementById("imageResult");
      result.innerHTML = `<p>Generating image for: <strong>${prompt}</strong></p>`;
      result.innerHTML += `<img src="https://api.dummyimage.com/400x300/333/fff&text=${encodeURIComponent(prompt)}" class="mt-2 rounded" />`;
    }

    function generateVideo() {
      const prompt = document.getElementById("videoPrompt").value;
      const result = document.getElementById("videoResult");
      result.innerHTML = `<p>Generating video for: <strong>${prompt}</strong></p>`;
      result.innerHTML += `
        <video controls class="mt-2 w-full rounded">
          <source src="https://www.w3schools.com/html/mov_bbb.mp4" type="video/mp4" />
          Your browser does not support the video tag.
        </video>`;
    }
  </script>
