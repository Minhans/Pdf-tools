      <input type="text" id="avatarPrompt" placeholder="Describe your avatar" class="w-full p-2 border rounded mb-2" />
      <button onclick="generateAvatar()" class="bg-blue-500 text-white px-4 py-2 rounded w-full">Generate Avatar</button>
      <div id="avatarResult" class="mt-4"></div>
